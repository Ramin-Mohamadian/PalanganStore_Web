@page
@model PalanganStore_Web.Pages.Admin.Users.IndexModel
@{
}



<div class="main-panel">
    <div class="main-content">
        <div class="content-wrapper">
            <div class="container-fluid">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row">

                        <div class="col-xl-3 col-lg-6 col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="media align-items-stretch">
                                        <div class="p-2 text-center bg-danger rounded-right pt-3">
                                            <i class="icon-user font-large-2 text-white"></i>
                                        </div>
                                        <div class="py-2 px-2 media-body">
                                            <h6 class="danger">کاربران جدید</h6>
                                            <h5 class="text-bold-400">@ViewData["userCount"]</h5>
                                            <div class="progress mt-1 mb-0" style="height: 7px;">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                    <section id="shopping-cart">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-warning">
                                            <h4 class="card-title">لیست کاربران</h4>
                                            <hr />
                                            <a asp-page="CreateUser" class="btn btn-success">
                                                افزودن کاربر<i class="ft-plus-square"></i>
                                            </a>

                                            <form method="get">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                    </div>
                                                    <input type="text" name="name" class="form-control" placeholder="جستجو بر اساس نام" aria-label="Amount">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-info" type="submit">
                                                            <i class="ft-search"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="card-block">
                                            <div class="table-responsive">
                                                <table id="recent-orders" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th class="border-top-0">نام کاربر</th>
                                                            <th class="border-top-0">ایمیل</th>
                                                            <th class="border-top-0">وضعیت</th>
                                                            <th class="border-top-0">شماره تلفن</th>
                                                            <th class="border-top-0">دستورات</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @foreach (var user in Model.ListUser)
                                                        {
                                                            <tr>
                                                                <td class="text-truncate">
                                                                    <span class="avatar avatar-xs">
                                                                        <img class="box-shadow-2" src="/assets/images/Users/@user.ImageName" alt="avatar">
                                                                    </span>
                                                                    <span>@user.UserName</span>
                                                                </td>
                                                                <td class="text-info">@user.Email</td>
                                                                @if (user.IsActiveUser)
                                                                {
                                                                    <td class="text-truncate"><i class="fa fa-dot-circle-o success font-medium-1 mr-1"></i>فعال</td>
                                                                }
                                                                else
                                                                {
                                                                    <td class="text-truncate"><i class="fa fa-dot-circle-o danger font-medium-1 mr-1"></i>غیر فعال</td>
                                                                }

                                                                <td class="text-success">@user.NumberPhone</td>

                                                                <td>
                                                                    <a asp-page="EditeUser" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">ویرایش<i class="icon-note"></i></a>
                                                                    <a asp-page="DeleteUser" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">حذف<i class="ft-trash-2"></i></a>
                                                                    <a class="btn btn-info btn-sm">
                                                                        جزییات<i class="ft-user"></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>


                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>

    <footer class="footer footer-static footer-light">
        <p class="clearfix text-muted text-center px-2"><span>© 2018 کپی رایت  <a href="https://fkazemi5236@gmail.com" id="pixinventLink" target="_blank" class="text-bold-800 primary darken-2"> fkazemi5236 </a> , همه حقوق محفوظ است </span></p>
    </footer>

</div>